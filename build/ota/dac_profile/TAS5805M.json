{
  "dac_model": "TAS5805M",
  "i2c_required": true,
  "comment": "Texas Instruments TAS5805M — 2x23W BTL. I2C addr 0x2D (ADR pin 15k pull-up).",
  "init": [
    {"comment": "Select Page 0, Book 0"},
    {"reg": "0x00", "val": "0x00"},
    {"reg": "0x7F", "val": "0x00"},
    {"comment": "Software reset (clears all registers)"},
    {"reg": "0x01", "val": "0x01"},
    {"delay_ms": 10},
    {"comment": "BTL stereo mode (DEVICE_CTRL_1)"},
    {"reg": "0x02", "val": "0x00"},
    {"comment": "Enter Hi-Z state — required before DSP config (DEVICE_CTRL_2)"},
    {"reg": "0x03", "val": "0x02"},
    {"delay_ms": 5},
    {"comment": "Safe startup volume: 0x30 = 0 dB"},
    {"reg": "0x4C", "val": "0x30"},
    {"reg": "0x4D", "val": "0x30"},
    {"delay_ms": 5},
    {"comment": "Transition Hi-Z → Play mode (0x03 = PLAY)"},
    {"reg": "0x03", "val": "0x03"},
    {"delay_ms": 20}
  ],
  "volume": {
    "reg_left":     "0x4C",
    "reg_right":    "0x4D",
    "zero_db_code": 48,
    "db_per_step":  -0.5,
    "min_db":       -103.5,
    "max_db":       24.0
  },
  "mute": {
    "reg":      "0x03",
    "muted":    "0x08",
    "unmuted":  "0x03"
  }
}
